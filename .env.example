# Home Assistant Configuration
HA_BASE_URL=https://your-domain.com:443/api
HA_API_KEY=your_jwt_token_here
HA_API_KEY_SECRET=homeassistant_api_token
HA_SECRETS_PATH=/config/secrets.yaml

# Database Configuration
MARIADB_DSN=mysql+pymysql://energy_planner_app:YOUR_DB_PASSWORD@your-domain.com:3306/energy_planner

# Energy Configuration
ENERGY_TIMEZONE=Europe/Copenhagen
LOOKAHEAD_HOURS=72
RESOLUTION_MINUTES=60

# Sensors - House Consumption
HOUSE_CONSUMPTION_SENSOR=sensor.house_load_quarter_hour
EV_QH_SENSOR=sensor.ev_charge_quarter_hour

# Sensors - EV Configuration
EV_SOC_SENSOR=sensor.tessa_battery
EV_TARGET_SOC_SENSOR=input_number.tesla_charge_procent_limit
EV_STATUS_SENSOR=sensor.easee_status
EV_START_SENSOR=select.ev_smart_charging_charge_start_time
EV_END_SENSOR=select.ev_smart_charging_charge_completion_time

# Sensors - Battery
BATTERY_SOC_SENSOR=sensor.deye12_sun12k_battery_capacity

# Optimization Settings
USE_LINEAR_SOLVER=false
USE_ML_FORECAST=true
